<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/my_ils_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="40dp">

        <ImageView
            android:layout_width="280dip"
            android:layout_height="280dip"
            android:id="@+id/img_ils"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_ils_state"
            android:layout_marginBottom="22dp"
            android:textColor="#A9A1A1" android:layout_alignBottom="@+id/img_ils"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="0dp" android:layout_weight="1.07">
        <CheckBox
            style="@style/CheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="63dip"
            android:id="@+id/cbox_onoff"
            android:src="@drawable/ils_btn"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
