<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/Tvv5"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:textColor="@color/my_door_color"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_round"
        android:src="@drawable/door_c_black_dian"
        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/Tvv5"
        android:layout_toEndOf="@+id/Tvv5"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
        android:textColor="@color/my_door_color2" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_round" android:layout_toEndOf="@+id/img_round"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_status"
        android:textColor="@color/my_door_color2"
        android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tv_name"
        android:layout_toEndOf="@+id/tv_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_describe"
        android:textColor="@color/my_door_color2" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_status" android:layout_toEndOf="@+id/tv_status"
        android:layout_marginLeft="25dp" android:layout_marginStart="25dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView31"
        android:layout_below="@+id/img_round"
        android:layout_alignLeft="@+id/img_round" android:layout_alignStart="@+id/img_round"
        android:src="@drawable/door_c_line" android:scaleType="fitXY"/>
</RelativeLayout>